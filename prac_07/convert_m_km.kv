BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles
            text: '26'
            font_size: 50
            on_text: app.calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.increment(1)
            Button:
                text: 'Down'
                on_press: app.increment(-1)
    Button:
        text: 'Convert M to Km'
        on_press: app.calculate()
    Label:
        id: kilometres
        font_size: 50
        text: ''
        color: (1, 0, 1, 1)
